<header class="sticky top-0 z-40 backdrop-blur supports-[backdrop-filter]:bg-white/60 dark:supports-[backdrop-filter]:bg-slate-900/50 border-b border-slate-200/60 dark:border-slate-800/60">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="/" class="group inline-flex items-center gap-2">
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-brand/10 ring-1 ring-brand/30 shadow-brand transition group-hover:scale-105">
        <!-- Simple M logo -->
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand dark:text-brand-dark">
          <path fill="currentColor" d="M4 18V6h2l6 6 6-6h2v12h-2V9.6l-6 6-6-6V18H4z"/>
        </svg>
      </span>
      <span class="text-lg font-semibold tracking-tight">MarwaPHP</span>
    </a>

    <nav class="hidden md:flex items-center gap-6 text-sm">
      <a href="#features" class="hover:text-brand transition">Features</a>
      <a href="#starter" class="hover:text-brand transition">Starter</a>
      <a href="#docs" class="hover:text-brand transition">Docs</a>
      <button x-on:click="dark = !dark; localStorage.setItem('theme', dark ? 'dark' : 'light')"
              class="rounded-lg border border-slate-300/60 dark:border-slate-700/60 px-3 py-1.5 text-xs hover:bg-slate-100 dark:hover:bg-slate-800 transition">
        <span x-show="!dark">🌙 Dark</span>
        <span x-show="dark" x-cloak>☀️ Light</span>
      </button>
    </nav>
  </div>
</header>
