{
  "name": "memran/marwa-framework",
  "description": "PSR-7, PSR-15 Modular PHP Micro Framework.",
  "keywords": [
    "http",
    "psr-3",
    "psr-7",
    "psr-11",
    "psr-15",
    "psr-16",
    "framework",
    "Swoole",
    "MarwaPHP Framework",
    "marwaphp",
    "Marwa Framework",
    "PHP 8",
    "PHP 7"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": " >= 7.1",
    "ext-json": "*",
    "symfony/console": "^6.4",
    "symfony/dotenv": "^7.1",
    "league/container": "^4.2",
    "laminas/laminas-httphandlerrunner": "^2.10",
    "markrogoyski/simplelog-php": "2.*",
    "nette/utils": "^4.0",
    "aura/session": "^2.1",
    "memran/marwadb": "dev-master",
    "firebase/php-jwt": "^6.4",
    "twig/twig": "^3.0",
    "symfony/process": "^7.1",
    "nesbot/carbon": "^2.33",
    "rakit/validation": "^1.2",
    "matthiasmullie/scrapbook": "^1.4",
    "hybridauth/hybridauth": "^3.3",
    "doctrine/collections": "^2.2",
    "symfony/translation": "^5.1",
    "filp/whoops": "^2.15",
    "psy/psysh": "@stable",
    "fakerphp/faker": "^1.19",
    "swiftmailer/swiftmailer":"^6.0",
    "laminas/laminas-diactoros": "^3.3",
    "league/route": "^5.1",
    "guzzlehttp/guzzle": "^7.8",
    "league/event": "^2.0",
    "league/flysystem": "^3.28",
    "kint-php/kint": "^5.1",
    "peppeocchi/php-cron-scheduler": "^4.0",
    "symfony/filesystem": "^7.3"
  },
  "autoload": {
    "files": [
      "src/Application/Helpers/Helper.php"
    ],
    "psr-4": {
        "Marwa\\": "src/"    
      }
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "3.*",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-phpunit": "^0.12"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs src",
    "phpcbf": "vendor/bin/phpcbf src",
    "analyse": "vendor/bin/phpstan analyse -l 4 --no-progress src",
    "check": "vendor/bin/phpunit && vendor/bin/phpstan analyse -l 4 --no-progress src",
    "test": "vendor/bin/phpunit"
  }
}
