{
  "name": "marwa/framework",
  "description": "MarwaPHP -  A future‑proof, PSR‑compliant PHP framework core.Minimal, modular, and fast — with developer‑friendly APIs.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "http",
    "psr-3",
    "psr-7",
    "psr-11",
    "psr-15",
    "psr-16",
    "framework",
    "PHP Framework",
    "Opensource Framework",
    "MarwaPHP Framework",
    "marwaphp",
    "Marwa Framework",
    "PHP 8"
  ],
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "memran/marwa-logger": "dev-main",
    "memran/marwa-error-handler": "dev-main",
    "memran/marwa-support": "dev-main",
    "memran/marwa-db": "dev-main",
    "memran/marwa-view": "dev-main",
    "memran/marwa-debugbar": "dev-main",
    "memran/marwa-entity": "dev-main",
    "memran/marwa-module": "dev-main",
    "memran/marwa-event": "dev-main",
    "memran/marwa-router": "dev-main",
    "league/container": "^5.1",
    "symfony/dotenv": "^7.3",
    "relay/relay": "^3.0",
    "symfony/event-dispatcher": "^7.3",
    "psr/event-dispatcher": "^1.0",
    "nesbot/carbon": "^3.10",
    "symfony/console": "^7.3"
  },
  "autoload": {
    "psr-4": {
      "Marwa\\Framework\\": "src/"
    },
    "files": [
      "src/Supports/Helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Marwa\\Framework\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "php vendor/bin/testify",
    "stan": "php vendor/bin/phpstan analyse"
  },
  "require-dev": {
    "memran/php-testify": "^1.0",
    "phpstan/phpstan": "^2.1"
  }
}
