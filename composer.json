{
  "name": "memran/marwa-framework",
  "description": "PSR-7, PSR-15 Modular PHP Micro Framework.",
  "keywords": [
    "http",
    "psr-3",
    "psr-7",
    "psr-11",
    "psr-15",
    "psr-16",
    "framework",
    "PHP Framework",
    "Opensource Framework",
    "MarwaPHP Framework",
    "marwaphp",
    "Marwa Framework",
    "PHP 8",
    "PHP 7"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": " >= 7.1",
    "memran/marwa-logger": "^1.0",
    "symfony/config": "^7.3",
    "symfony/filesystem": "^7.3",
    "symfony/yaml": "^7.3",
    "league/container": "^5.1",
    "league/route": "^6.2",
    "laminas/laminas-diactoros": "^3.6",
    "laminas/laminas-httphandlerrunner": "^2.12",
    "symfony/dotenv": "^7.3"
  },
  "autoload": {
    "files": [
      "src/Helpers/Helper.php"
    ],
    "psr-4": {
        "Marwa\\App\\": "src/"    
      }
  },
  "require-dev": {
       "filp/whoops": "^2.18",
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "3.*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-phpunit": "^0.12",
    "symfony/var-dumper": "^7.3"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs src",
    "phpcbf": "vendor/bin/phpcbf src",
    "analyse": "vendor/bin/phpstan analyse -l 4 --no-progress src",
    "check": "vendor/bin/phpunit && vendor/bin/phpstan analyse -l 4 --no-progress src",
    "test": "vendor/bin/phpunit"
  }
}
